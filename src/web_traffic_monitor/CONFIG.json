{

    "data":{
        "!Dir":{
            "$ref": "{{cwd.Dir}}",
            "method": {
                "name": "join_Dir",
                "kwargs": {
                    "path": "Data"
                }
            }
        }
    },

    "!db_Path":{
        "$ref": "{{data.Dir}}",
        "method": {
            "name": "join_Path",
            "kwargs": {
                "path": "{{package.name}}.db"
            }
        }       
    },
    "!db_path":{
        "$ref": "{{db_Path}}",
        "attribute": "path"
    },

    "db_connection_module": "sqlite",


    "db_conn_kwargs" : {
        "db_path": "{{db_path}}",
        "connection_module":"{{db_connection_module}}"       
    },

    "db_get_conn_kwargs": {
        "check_same_thread": false
    }
    

}

